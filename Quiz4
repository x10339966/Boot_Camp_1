import java.util.Scanner;

public class Quiz4
{
  public static void main(String[] args)
  {
    Scanner keyboard = new Scanner(System.in);
    int numFriends;
    String name;
    
    //Ask the user how many friends they have
    System.out.pring("How many friends do you have? ");
    numFriends = keyboard.nextInt();
    
    //Using a for-loop and the number of friends entered,
    //ask the names of the user's friends.
    //Display name to screen.
    keyboard.nextLine(); //consume bogus \n
    for (int i = 0; i < numFriends; i++)
    {
      System.out.print("Name of friend: ");
      name = keyboard.nextLine();
      System.out.println(name);
    
    }

  }

}
